{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ビルド",
            "type": "shell",
            "command": "./gradlew clean build",
            "windows": {
                "command": "gradlew.bat clean build"
            }
        },
        {
            "label": "開発サーバーの実行",
            "type": "shell",
            "command": "(sleep 3 && open http://localhost:8080/) & ./gradlew appRun",
            "windows": {
                "command": "timeout 3 & start http://localhost:8080/ & gradlew.bat appRun"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}